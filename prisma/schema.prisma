generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  owner
  society
}

enum Gender {
  male
  female
  all
}

enum Status {
  pending
  accept
  reject
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @default("")
  email    String @unique @default("")
  password String @default("")
  phone    String @default("")
  role     Role

  kos     Kos[]
  reviews Review[]
  books   Book[]
}

model Kos {
  id            Int    @id @default(autoincrement())
  userId        Int
  name          String @default("")
  address       String @default("")
  pricePerMonth Int    @default(0)
  roomTotal     Int    @default(0)
  roomAvailable Int    @default(0)
  description   String @default("")
  gender        Gender

  user    User     @relation(fields: [userId], references: [id])
  reviews Review[]
  books   Book[]
  facilities Facility[]  // relasi ke tabel fasilitas
  kosPics KosPic[]
}

model Facility {
  id       Int    @id @default(autoincrement())
  kosId    Int
  name     String

  kos Kos @relation(fields: [kosId], references: [id])
}

model Review {
  id      Int    @id @default(autoincrement())
  kosId   Int
  comment String @default("")
  reply   String @default("")
  userId  Int

  kos  Kos  @relation(fields: [kosId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

model Book {
  id        Int      @id @default(autoincrement())
  kosId     Int
  userId    Int
  startDate DateTime @default(now())
  endDate   DateTime @default(now())
  status    Status

  kos  Kos  @relation(fields: [kosId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

model KosPic {
  id          Int     @id @default(autoincrement())
  kosId       Int
  imagePath   String  @default("")
  isThumbnail Boolean @default(false)

  kos Kos @relation(fields: [kosId], references: [id])
}